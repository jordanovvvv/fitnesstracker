<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list_login"
    android:id="@+id/registerlayout"
    tools:context=".LoginActivity">

    <!-- "Add Picture" Text -->
    <TextView
        android:id="@+id/text_add_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Add a Picture"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/reg_profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_add_picture"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_user" />

    <!-- Username EditText -->
    <EditText
        android:id="@+id/reg_profileUsername"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/reg_profilePassword"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_profileUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF" />

    <!-- Email EditText -->
    <EditText
        android:id="@+id/reg_profileEmail"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_profilePassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF" />

    <!-- Register Button -->
    <Button
        android:id="@+id/button_profileSaveInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_profileEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="Register user"
        android:textColor="#42A5F5" />

    <!-- Back TextView -->
    <TextView
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/oswald_light"
        android:gravity="center"
        android:text="Back"
        android:textColor="#EC2521"
        android:textSize="16sp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="563dp"
        android:layout_height="864dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/live_background" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/kmProgressBar"
        android:layout_width="164dp"
        android:layout_height="166dp"
        app:cpb_background_progressbar_color="#C8D8E6"
        app:cpb_background_progressbar_width="15dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="9"
        app:cpb_progressbar_color="#66BB6A"
        app:cpb_progressbar_width="15dp"
        app:cpb_round_border="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="207dp"
        android:layout_height="220dp"
        app:cpb_background_progressbar_color="#C8D8E6"
        app:cpb_background_progressbar_width="15dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="10000"
        app:cpb_progressbar_color="#1185E1"
        app:cpb_progressbar_width="15dp"
        app:cpb_round_border="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cpb_background_progressbar_color="#C8D8E6"
        app:cpb_background_progressbar_width="15dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="400"
        app:cpb_progressbar_color="#E64A19"
        app:cpb_progressbar_width="15dp"
        app:cpb_round_border="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565" />

    <TextView
        android:id="@+id/steps_taken_id"
        android:layout_width="113dp"
        android:layout_height="39dp"
        android:fontFamily="@font/oswald_light"
        android:text="0"
        android:textColor="#1185E1"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
        app:layout_constraintVertical_bias="0.331" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="233dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/oswald_light"
        android:text="Today's step count:"
        android:textAlignment="center"
        android:textColor="#4F9FDF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/circularProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <TextView
        android:id="@+id/distanceID"
        android:layout_width="103dp"
        android:layout_height="28dp"
        android:text="0 km"
        android:fontFamily="@font/oswald_light"
        android:textAlignment="center"
        android:textColor="#66BB6A"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/kmProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/kmProgressBar"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/kmProgressBar"
        app:layout_constraintTop_toTopOf="@+id/kmProgressBar"
        app:layout_constraintVertical_bias="0.301" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:fontFamily="@font/oswald_light"
        android:src="@drawable/ic_calories"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar2"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar2"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar2"
        app:layout_constraintVertical_bias="0.666" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="65dp"
        android:layout_height="57dp"
        android:src="@drawable/ic_sneakers"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
        app:layout_constraintVertical_bias="0.73" />

    <TextView
        android:id="@+id/calories_id"
        android:layout_width="54dp"
        android:layout_height="30dp"
        android:text="0"
        android:fontFamily="@font/oswald_light"
        android:textAlignment="center"
        android:textColor="#E64A19"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar2"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar2"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar2"
        app:layout_constraintVertical_bias="0.789" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:src="@drawable/ic_distance"
        app:layout_constraintBottom_toBottomOf="@+id/kmProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/kmProgressBar"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/kmProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/distanceID"
        app:layout_constraintVertical_bias="0.312" />


</androidx.constraintlayout.widget.ConstraintLayout>